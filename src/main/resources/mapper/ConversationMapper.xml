<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.example.demo.mapper.ConversationMapper">

    <resultMap id="ConversationResultMap" type="com.example.demo.model.Conversation">
        <id property="id" column="id"/>
        <result property="userId" column="user_id"/>
        <result property="title" column="title"/>
        <result property="createdAt" column="created_at"/>
    </resultMap>

    <insert id="insert" useGeneratedKeys="true" keyProperty="id">
        INSERT INTO conversations (user_id, title, created_at)
        VALUES (#{userId}, #{title}, NOW())
    </insert>

    <select id="findById" resultMap="ConversationResultMap">
        SELECT id, user_id, title, created_at
        FROM conversations
        WHERE id = #{id}
    </select>

    <select id="findByUserId" resultMap="ConversationResultMap">
        SELECT id, user_id, title, created_at
        FROM conversations
        WHERE user_id = #{userId}
        ORDER BY created_at DESC
    </select>

    <update id="updateTitle">
        UPDATE conversations
        SET title = #{title}
        WHERE id = #{id}
    </update>

    <delete id="delete">
        DELETE FROM conversations
        WHERE id = #{id}
    </delete>

</mapper>