<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.example.demo.mapper.PasswordResetTokenMapper">

    <!-- Result Map: DB 컬럼을 Java 객체로 매핑 -->
    <resultMap id="PasswordResetTokenResultMap" type="com.example.demo.model.PasswordResetToken">
        <id property="id" column="id"/>
        <result property="userId" column="user_id"/>
        <result property="token" column="token"/>
        <result property="expiresAt" column="expires_at"/>
        <result property="createdAt" column="created_at"/>
        <result property="used" column="used"/>
    </resultMap>

    <!-- 새 토큰 생성 -->
    <insert id="insert" useGeneratedKeys="true" keyProperty="id">
        INSERT INTO password_reset_tokens (user_id, token, expires_at, created_at, used)
        VALUES (#{userId}, #{token}, #{expiresAt}, NOW(), FALSE)
    </insert>

    <!-- 유효한 토큰 찾기 (사용 안 됨 + 만료 안 됨) -->
    <select id="findValidToken" resultMap="PasswordResetTokenResultMap">
        SELECT id, user_id, token, expires_at, created_at, used
        FROM password_reset_tokens
        WHERE token = #{token}
          AND used = FALSE
          AND expires_at &gt; NOW()
    </select>

    <!-- 토큰 사용 처리 -->
    <update id="markAsUsed">
        UPDATE password_reset_tokens
        SET used = TRUE
        WHERE id = #{id}
    </update>

    <!-- 만료된 토큰 삭제 (정리용) -->
    <delete id="deleteExpiredTokens">
        DELETE FROM password_reset_tokens
        WHERE expires_at &lt; NOW()
    </delete>

</mapper>